{
  "manifest_version": 3,
  "name": "Script Debugger Enhanced for ServiceNow",
  "version": "1.0.0",
  "description": "Advanced debugging and development tools for ServiceNow",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms",
    "contextMenus"
  ],
  
  "host_permissions": [
    "https://*.service-now.com/*",
    "https://*.servicenow.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*.service-now.com/*",
        "https://*.servicenow.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "devtools_page": "devtools.html",
  
  "options_page": "options.html",
  
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://*.service-now.com/*", "https://*.servicenow.com/*"]
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}